# Root EditorConfig applies to all subfolders
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# PHP: use 4 spaces (Laravel standard)
[*.php]
indent_size = 4

# Markdown: keep trailing whitespace
[*.md]
trim_trailing_whitespace = false

# JSON/YAML
[*.json]
indent_size = 2

[*.yml]
indent_size = 2

